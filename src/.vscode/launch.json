        {
            "name": "Catalog.API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Services/Catalog/Catalog.API/bin/Debug/net6.0/Catalog.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Services/Catalog/Catalog.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
