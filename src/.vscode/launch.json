{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Catalog.API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Services/Catalog/Catalog.API/bin/Debug/net6.0/Catalog.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Services/Catalog/Catalog.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Discount.API",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Services/Discount/Discount.API/bin/Debug/net6.0/Discount.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Services/Discount/Discount.API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ],
    "compounds": [
        {
            "name": "Multiple Projects",
            "configurations": [
                "Catalog.API",
                "Discount.API"
            ]
        }
    ]
}