@model string

@{
    ViewData["Title"] = "Checkout completed";
}

<div class="text-center">
    <h1 class="text-info pt-4">Congratulations! Your order has been placed.</h1>
    <h4 class="text-warning pb-3">Order ID - @Model</h4>
    <div class="row">
        <div class="col-6">
            <a class="btn btn-outline-primary mt-2 btn-sm" asp-controller="Order" asp-action="OrderDetails" asp-route-orderId="@Model">
                View Details
            </a>
        </div>
        <div class="col-6">
            <a class="btn btn-outline-warning mt-2 btn-sm" asp-controller="Home" asp-action="Index">
                Continue Shopping
            </a>
        </div>
    </div>
</div>