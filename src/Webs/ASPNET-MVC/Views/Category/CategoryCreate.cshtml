@{
    ViewData["Title"] = "Create Category";
}

<form method="post" asp-action="CategoryCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-dark text-center">Create Category</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Category Name</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" required name="categoryName" placeholder="Name for new category..." />
            </div>
        </div>
        <div class="row">
            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-action="CategoryIndex">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}