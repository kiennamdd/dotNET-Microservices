@model CouponCreateRequest

@{
    ViewData["Title"] = "Create Coupon";
}

<form method="post" asp-action="CouponCreate">
    <br />
    <div class="container border p-3">
        <h1 class="text-dark text-center">Create Coupon</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Coupon Code</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="CouponCode" />
                <span asp-validation-for="CouponCode" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Min Order Total</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="MinOrderTotal" />
                <span asp-validation-for="MinOrderTotal" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Discount Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="DiscountAmount" />
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Discount Percent</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="DiscountPercent" />
                <span asp-validation-for="DiscountPercent" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Max Discount Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="MaxDiscountAmount" />
                <span asp-validation-for="MaxDiscountAmount" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Expired Date</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="ExpiredDate" />
                <span asp-validation-for="ExpiredDate" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-action="CouponIndex">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}